<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:interpolator="easeInOut">



        <KeyFrameSet>

            <KeyAttribute
                app:framePosition="20"
                app:target="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="40"
                app:target="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/colorPrimary" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="60"
                app:target="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/colorPrimary" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="80"
                app:target="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/colorPrimary" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:target="@id/background"
                app:transitionEasing="accelerate">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>

            <KeyAttribute
                android:translationX="@dimen/dimens_70dp"
                app:framePosition="75"
                app:target="@id/getting_started" />

            <KeyAttribute
                android:translationX="0dp"
                app:framePosition="100"
                app:target="@id/getting_started" />
        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@id/onboardingRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <Constraint
            android:id="@id/getting_started"
            android:translationX="@dimen/dimens_70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@id/onboardingRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Constraint
            android:id="@id/getting_started"
            android:translationX="0dp"
            android:layout_width="@dimen/dimens_200dp"
            android:layout_marginBottom="@dimen/dimens_32dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>


</MotionScene>